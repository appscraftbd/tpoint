<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F8FDFF"
    tools:context=".Fragment3">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/blood"
            android:padding="-30dp"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="15dp"
        >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="বাধন রক্ত দান"
               android:textStyle="bold"
               android:textColor="#E83131"
               android:layout_marginLeft="17dp"
               android:layout_marginTop="10dp"
               android:textSize="21dp"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Mawlana Bhashani Science and Technology University"
               android:textStyle="bold"
               android:textColor="#858585"
               android:layout_marginLeft="17dp"
               android:textSize="16dp"
               android:layout_marginBottom="-5dp"
               />
           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_margin="15dp"
               android:id="@+id/contect"
               app:cardCornerRadius="13dp"
               >
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:text="Contect"
                   android:gravity="center"
                   android:textSize="20dp"
                   android:textColor="@color/white"
                   android:background="#C90A10"
                   />


           </androidx.cardview.widget.CardView>






       </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>